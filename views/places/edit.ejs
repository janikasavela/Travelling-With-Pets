<% layout('layouts/boilerplate')%>
<div class="row">
        <h1 class="text-center">Edit Place</h1>
        <div class="col-6 offset-3">
            <form action="/places/<%= place._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="place[title]" value="<%= place.title %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="place[location]" value="<%= place.location %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="place[image]" value="<%= place.image %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="place[description]"><%= place.description %></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Place</button>
                </div>
            </form>
            <a href="/places/<%= place._id %>">Back to Place</a>
        </div>
      </div>
